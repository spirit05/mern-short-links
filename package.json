{
  "name": "mern-short",
  "version": "1.0.0",
  "description": "mern, react",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=prodaction node app.js",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "build": "concurrently \"npm run client:build\" \"npm run client:install\" \"npm install \"",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "mern",
    "react"
  ],
  "author": "Stepan Kucherenko <spirit3105@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.0.2",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validation": "^3.0.8",
    "express-validator": "^6.10.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.5",
    "nodemon": "^2.0.7",
    "shortid": "^2.2.16"
  }
}
